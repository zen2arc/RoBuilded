{
  "manifest_version": 2,
  "name": "Rofreshed",

  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.roblox.com/*"
  ],

  "web_accessible_resources": [
    "pages/clean_home.js",
    "web/pages/*.*",
    "web/themes/*/index.css",
    "web/themes/*/index.js"
  ],
  "options_ui": {
    "page": "/options/index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "rofreshed@painfulcolour.github.io",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "default_icon": "icons/icon_48.png",
    "default_title": "Rofreshed",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["pages/clean_game.js", "pages/clean_home.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://web.roblox.com/*", "*://www.roblox.com/*"],
      "js": ["scripts/content_main.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["*://web.roblox.com/*", "*://www.roblox.com/*"],
      "js": ["scripts/content_loaded.js"]
    }
  ]
}
